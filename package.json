{
  "name": "waybook",
  "version": "0.1.0",
  "description": "The Waybook API",
  "main": "server/server.js",
  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mywaylearning/waybook.git"
  },
  "dependencies": {
    "async": "^0.9.0",
    "compression": "^1.4.3",
    "cors": "^2.6.0",
    "db-migrate": "^0.9.14",
    "debug": "^2.2.0",
    "dotenv": "^1.1.0",
    "errorhandler": "^1.3.6",
    "lodash": "^3.8.0",
    "loopback": "^2.18.0",
    "loopback-boot": "^2.7.1",
    "loopback-component-oauth2": "^2.0.0-beta9",
    "loopback-component-passport": "^1.3.0",
    "loopback-connector-mysql": "^2.0.1",
    "loopback-datasource-juggler": "^2.27.0",
    "loopback-explorer": "^1.7.2",
    "socket.io": "^1.3.5",
    "winston": "^1.0.0"
  },
  "devDependencies": {
    "express-winston": "^0.2.12",
    "js-yaml": "^3.3.0",
    "jsonfile": "^2.0.0",
    "node-sass": "^2.0.0-beta",
    "recursive-readdir-sync": "^1.0.6",
    "swagger-tools": "^0.8.2",
    "z-schema": "^3.9.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate-swagger": "scripts/generate-swagger",
    "lint": "gjslint --flagfile=./.gjslintrc --nojsdoc -r server -r client/www/js 2>&1",
    "fix": "fixjsstyle --flagfile=./.gjslintrc --nojsdoc -r server -r client/www/js ",
    "build-styles": "cd client && node-sass --precision 10 --linefeed cr --output-style nested --indent-type space --indent-width 2 --source-map www/css/waybook.css.map scss/ionic.app.scss www/css/waybook.css && autoprefixer www/css/waybook.css && cd ..",
    "build-js": "cat client/www/js/uglify.txt | sed \"s%^%$PWD/%\" | xargs uglifyjs -c warnings=false -p relative -o client/www/js/waybook.min.js --source-map client/www/js/waybook.min.js.map -- ",
    "serve-client": "cd client && ionic serve --nolivereload && cd ..",
    "deploy-uidev": "cd client && aws s3 sync www/ s3://uidev.way.me --delete --acl public-read --profile way && cd ..",
    "localdev-setup": "node scripts/localdev-setup && node scripts/localdev-users"
  }
}
