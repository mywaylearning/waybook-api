{
  "name": "waybook-api",
  "version": "0.1.0",
  "description": "The Waybook API",
  "main": "server/server.js",
  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mywaylearning/waybook.git"
  },
  "dependencies": {
    "async": "^1.3.0",
    "compression": "^1.4.3",
    "cors": "^2.7.1",
    "db-migrate": "^0.9.16",
    "debug": "^2.2.0",
    "dotenv": "^1.1.0",
    "errorhandler": "^1.3.6",
    "hat": "0.0.3",
    "jsonfile": "^2.0.1",
    "lodash": "^3.10.0",
    "lodash.isarray": "^3.0.4",
    "lodash.isfunction": "^3.0.6",
    "loopback": "^2.18.0",
    "loopback-boot": "^2.8.0",
    "loopback-component-oauth2": "2.0.0-rc3",
    "loopback-component-passport": "^1.3.1",
    "loopback-connector-mysql": "^2.1.1",
    "loopback-datasource-juggler": "^2.32.0",
    "loopback-explorer": "^1.7.2",
    "moment": "^2.10.6",
    "pm2": "^0.14.3",
    "schema-validator": "^3.3.0",
    "sendgrid": "^1.9.2",
    "socket.io": "^1.3.5",
    "toml-j0.4": "^1.0.10",
    "winston": "^1.0.0"
  },
  "devDependencies": {
    "js-yaml": "^3.3.0",
    "recursive-readdir-sync": "^1.0.6",
    "swagger-js-codegen": "^1.1.2",
    "swagger-tools": "^0.8.2",
    "tap-spec": "^4.0.2",
    "tape": "^4.2.0",
    "z-schema": "^3.9.1"
  },
  "scripts": {
    "test": "tape tests/**/*.js | tap-spec",
    "api": "scripts/generate-swagger && scripts/generate-api && npm run dev",
    "lint": "gjslint --flagfile=./.gjslintrc --nojsdoc -r server -r client/www/js 2>&1",
    "fix": "fixjsstyle --flagfile=./.gjslintrc --nojsdoc -r server -r client/www/js ",
    "localdev-setup": "node scripts/localdev-setup && node scripts/localdev-users",
    "build": "scripts/build",
    "start": "npm install && ./waybook-api | pm2 start -",
    "logs": "pm2 logs waybook-api",
    "dev": "./waybook-api | pm2 start -",
    "migrate": "db-migrate up -e localdev",
    "explorations": "node scripts/migrateExplorations.js",
    "stop": "pm2 stop waybook-api",
    "restart": "pm2 restart waybook-api"
  }
}
